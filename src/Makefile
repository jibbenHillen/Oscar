TARFILES = Makefile scanner.mll parser.mly ast.mli oscar.ml


# More detailed: build using ocamlc/ocamlopt + ocamlfind to locate LLVM

OBJS = ast.cmx sast.cmx conf.cmx codegen.cmx parser.cmx scanner.cmx analyzer.cmx oscar.cmx
# FLAGS = -use-ocamlfind -pkgs llvm,llvm.analysis,llvm.bitwriter,llvm.bitreader,llvm.linker
# OCAMLBUILD = ocamlbuild

oscar : $(OBJS)
	# $(OCAMLBUILD) $(FLAGS) $(OBJS)
	ocamlfind ocamlopt -linkpkg -package llvm,llvm.analysis,llvm.bitreader,llvm.linker $(OBJS) -o oscar

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

%.cmx : %.ml
	ocamlfind ocamlopt -c -package llvm $<

oscarulator.tar.gz : $(TARFILES)
	cd .. && tar zcf oscarulator/oscarulator.tar.gz $(TARFILES:%=oscarulator/%)

.PHONY : clean
clean :
	rm -f oscar parser.ml parser.mli scanner.ml parser.output *.cmo *.cmi *.cmx *.o

# Generated by ocamldep *.ml *.mli
codegen.cmo : ast.cmo conf.cmo
codegen.cmx : ast.cmx conf.cmx
oscar.cmo : scanner.cmo parser.cmi codegen.cmo sast.cmo analyzer.cmo
oscar.cmx : scanner.cmx parser.cmx codegen.cmx sast.cmx analyzer.cmx
conf.cmi : ast.cmi
conf.cmo: ast.cmo
conf.cmx: ast.cmx
parser.cmo : ast.cmo parser.cmi
parser.cmx : ast.cmx parser.cmi
scanner.cmo : parser.cmi
scanner.cmx : parser.cmx
analyzer.cmo: ast.cmo sast.cmo
analyzer.cmx: ast.cmx sast.cmx
parser.cmi : ast.cmo
